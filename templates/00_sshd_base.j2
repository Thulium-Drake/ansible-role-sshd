# {{ ansible_managed }}
{% if sshd_base_config_enabled %}
# Please place any local additions (NOT overrides!) in /etc/ssh/conf.d in a seperate file
#
# The only overrides possible are for lines that are still commented out (which are the defaults for openssh)

##
## START OF 00_sshd_base
##

# Server setup
#Port 22
#AddressFamily any
#ListenAddress 0.0.0.0
#ListenAddress ::
Protocol 2

#HostKey /etc/ssh/ssh_host_rsa_key
#HostKey /etc/ssh/ssh_host_ecdsa_key
#HostKey /etc/ssh/ssh_host_ed25519_key
#HostKeyAlgorithms ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com,ssh-ed25519,ssh-rsa

# Ciphers and keying
RekeyLimit default none
KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group18-sha512,diffie-hellman-group14-sha256,diffie-hellman-group16-sha512
Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
MACs umac-128-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-sha2-512-etm@openssh.com

# Logging
#SyslogFacility AUTH
#LogLevel INFO
#PrintLastLog yes

# Authentication:
LoginGraceTime 1m
#PermitRootLogin prohibit-password
StrictModes yes
MaxAuthTries 6
MaxSessions 10

PubkeyAuthentication yes
AuthorizedKeysFile	.ssh/authorized_keys
PasswordAuthentication no
UsePAM yes

# Forwarding
#GatewayPorts no
X11Forwarding yes
#X11DisplayOffset 10
#X11UseLocalhost yes
#PermitTTY yes

# Security
UsePrivilegeSeparation sandbox
PermitUserEnvironment no
#PermitTunnel no
#ChrootDirectory none

# Performance
ClientAliveInterval 5
ClientAliveCountMax 3
TCPKeepAlive yes
Compression yes
#UseDNS no
#MaxStartups 10:30:100

# Housekeeping
#PidFile /var/run/sshd.pid
#VersionAddendum none
#Banner none
PrintMotd no
AcceptEnv LANG LC_* GIT_AUTHOR_* GIT_COMMITER_*
Subsystem	sftp	{{ sshd_sftp_location }}

##
## END OF 00_sshd_base
##
{% else %}
# SSHD Base configuration disabled, if no other configuration is found SSHD will run with all settings default!
{% endif %}
